
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link href="~/Content/TranswarrantyCSS.css" rel="stylesheet" />
</head>
<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-4 text-center company__info">
                <span class="company__logo"><img src="~/img/favicon.png" style="width:70%;" /></span>
                <h4 class="company_title"></h4>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>Transwarranty</h2>
                    </div>
                    <div class="row">
                        <form control="" class="form-group">
                            <div class="row">
                                <!--<input type="text" name="username" id="username" class="form__input" placeholder="Username">-->
                                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form__input", placeholder = "Username", autocomplete = "off" } })
                            </div>
                            <div class="row">
                                <!--<input type="password" name="password" id="password" class="form__input" placeholder="Password">-->
                                @Html.Password("Password", "", new { @class = "form__input", placeholder = "Password" })
                            </div>
                            <div class="row">
                                <input type="submit" value="Submit" class="btn" onclick="return Login();">
                                <li><a style="color: #008080;" href="@Url.Action("InvestorRelations","Transwarranty")">Investor Relations</a></li>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/Swal/sweetalert.min.js"></script>
    <script src="~/TranswarrantyJS/Login_JS.js"></script>
    <script>
        $(document).ready(function () {
            disableBack();
        });
        function disableBack() { window.history.forward("/Transwarranty/InvestorRelations"); }
        setTimeout("disableBack()", 0);
        window.onunload = function () { null };
    </script>
</body>
</html>
